{
  "tags": [{
    "name": "service",
    "description": "Domapic service"
  }],
  "components": {
    "schemas": {
      "Service": {
        "description": "Service data",
        "type": "object",
        "properties": {
          "_id": {
            "description": "Unique id of the service",
            "type": "string"
          },
          "_user": {
            "description": "Unique id of the user owner of the service",
            "type": "string"
          },
          "processId": {
            "description": "Unique service process identifier. Auto-generated by service instance when started up",
            "type": "string"
          },
          "name": {
            "description": "Name of the service",
            "type": "string",
            "pattern": "^[a-z0-9_.-]*$"
          },
          "description": {
            "description": "Description of the service",
            "type": "string"
          },
          "package": {
            "description": "Package name of the service",
            "type": "string"
          },
          "version": {
            "description": "Package version of the service",
            "type": "string"
          },
          "url": {
            "description": "Url of the service",
            "type": "string",
            "format": "uri"
          },
          "createdAt": {
            "description": "Creation date timestamp",
            "type": "string"
          },
          "updatedAt": {
            "description": "Last update date timestamp",
            "type": "string"
          }
        },
        "additionalProperties": false,
        "example": {
          "_id": "1223123",
          "processId": "32142342fdsfsdf3233",
          "_user": "foo-user-id",
          "name": "foo-service-name",
          "description": "Domapic service for switching a rele",
          "package": "switch-rele-domapic-service",
          "version": "1.0.0",
          "url": "https://192.168.1.120:3000",
          "createdAt": "2018-07-28T17:13:08.718Z",
          "updatedAt": "2018-07-28T17:13:09.730Z"
        }
      },
      "NewService": {
        "description": "New service data",
        "type": "object",
        "properties": {
          "processId": {
            "description": "Unique service process identifier. Auto-generated by service instance when started up",
            "type": "string"
          },
          "description": {
            "description": "Description of the service",
            "type": "string"
          },
          "package": {
            "description": "Package name of the service",
            "type": "string"
          },
          "version": {
            "description": "Package version of the service",
            "type": "string"
          },
          "apiKey": {
            "description": "Api key to connect with the service",
            "type": "string"
          },
          "url": {
            "description": "Url of the service",
            "type": "string",
            "format": "uri"
          }
        },
        "required": ["processId", "package", "version", "apiKey", "url"],
        "additionalProperties": false,
        "example": {
          "processId": "32142342fdsfsdf3233",
          "name": "foo-service-name",
          "description": "Domapic service for switching a rele",
          "package": "switch-rele-domapic-service",
          "version": "1.0.0",
          "apiKey": "daf23rwf34grgjlpoj89h45bvdff238f0123bfl123n",
          "url": "https://192.168.1.120:3000"
        }
      },
      "UpdateService": {
        "description": "Update service data",
        "type": "object",
        "properties": {
          "description": {
            "description": "Description of the service",
            "type": "string"
          },
          "package": {
            "description": "Package name of the service",
            "type": "string"
          },
          "version": {
            "description": "Package version of the service",
            "type": "string"
          },
          "apiKey": {
            "description": "Api key to connect with the service",
            "type": "string"
          },
          "url": {
            "description": "Url of the service",
            "type": "string",
            "format": "uri"
          }
        },
        "additionalProperties": false,
        "example": {
          "description": "Domapic service for switching a rele",
          "package": "switch-rele-domapic-service",
          "version": "1.0.0",
          "apiKey": "daf23rwf34grgjlpoj89h45bvdff238f0123bfl123n",
          "url": "https://192.168.1.120:3000"
        }
      },
      "Services": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Service"
        }
      }
    },
    "responses": {
      "Service": {
        "description": "Service added or modified",
        "headers": {
          "location": {
            "$ref": "#/components/headers/ContentLocation"
          }
        }
      }
    }
  },
  "paths": {
    "/services": {
      "get": {
        "tags": ["service"],
        "summary": "Get services",
        "description": "List services",
        "operationId": "getServices",
        "responses": {
          "200": {
            "description": "Get services success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Services"
                }
              }
            }
          }
        },
        "security": [{
          "jwt": []
        }, {
          "apiKey": []
        }]
      },
      "post": {
        "tags": ["service"],
        "summary": "Add a new service",
        "description": "Register a new service",
        "operationId": "addService",
        "requestBody": {
          "description": "Data of the service to be added",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewService"
              }
            }
          }
        },
        "responses": {
          "201": {
            "$ref": "#/components/responses/Service"
          }
        },
        "security": [{
          "jwt": []
        }, {
          "apiKey": []
        }]
      }
    },
    "/services/{id}": {
      "get": {
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "Service id"
          }
        ],
        "tags": ["service"],
        "summary": "Returns service data",
        "description": "Returns all data about a service",
        "operationId": "getService",
        "responses": {
          "200": {
            "description": "service success",
            "content": {
              "application/json": {
                "schema" : {
                  "$ref": "#/components/schemas/Service"
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/NotFoundError"
          }
        },
        "security": [{
          "jwt": []
        }, {
          "apiKey": []
        }]
      },
      "patch": {
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "Service id"
          }
        ],
        "tags": ["service"],
        "summary": "Update service data",
        "description": "Update service data",
        "operationId": "updateService",
        "requestBody": {
          "description": "Data of the service to be modified",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateService"
              }
            }
          }
        },
        "responses": {
          "204": {
            "$ref": "#/components/responses/Service"
          },
          "404": {
            "$ref": "#/components/responses/NotFoundError"
          }
        },
        "security": [{
          "jwt": []
        }, {
          "apiKey": []
        }]
      }
    }
  }
}
