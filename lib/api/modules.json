{
  "tags": [{
    "name": "module",
    "description": "Domapic module"
  }],
  "components": {
    "schemas": {
      "Module": {
        "description": "Module data",
        "type": "object",
        "properties": {
          "_id": {
            "description": "Unique id of the module",
            "type": "string"
          },
          "_user": {
            "description": "Unique id of the user owner of the module",
            "type": "string"
          },
          "processId": {
            "description": "Unique module process identifier. Auto-generated by module instance when started up",
            "type": "string"
          },
          "name": {
            "description": "Name of the module",
            "type": "string",
            "pattern": "^[a-z0-9_.-]*$"
          },
          "description": {
            "description": "Description of the module",
            "type": "string"
          },
          "package": {
            "description": "Package name of the module",
            "type": "string"
          },
          "version": {
            "description": "Package version of the module",
            "type": "string"
          },
          "url": {
            "description": "Url of the module",
            "type": "string",
            "format": "uri"
          },
          "createdAt": {
            "description": "Creation date timestamp",
            "type": "string"
          },
          "updatedAt": {
            "description": "Last update date timestamp",
            "type": "string"
          }
        },
        "additionalProperties": false,
        "example": {
          "_id": "1223123",
          "processId": "32142342fdsfsdf3233",
          "_user": "foo-user-id",
          "name": "foo-module-name",
          "description": "Domapic module for switching a rele",
          "package": "switch-rele-domapic-module",
          "version": "1.0.0",
          "url": "https://192.168.1.120:3000",
          "createdAt": "2018-07-28T17:13:08.718Z",
          "updatedAt": "2018-07-28T17:13:09.730Z"
        }
      },
      "NewModule": {
        "description": "New module data",
        "type": "object",
        "properties": {
          "processId": {
            "description": "Unique module process identifier. Auto-generated by module instance when started up",
            "type": "string"
          },
          "description": {
            "description": "Description of the module",
            "type": "string"
          },
          "package": {
            "description": "Package name of the module",
            "type": "string"
          },
          "version": {
            "description": "Package version of the module",
            "type": "string"
          },
          "apiKey": {
            "description": "Api key to connect with the module",
            "type": "string"
          },
          "url": {
            "description": "Url of the module",
            "type": "string",
            "format": "uri"
          }
        },
        "required": ["processId", "package", "version", "apiKey", "url"],
        "additionalProperties": false,
        "example": {
          "processId": "32142342fdsfsdf3233",
          "name": "foo-module-name",
          "description": "Domapic module for switching a rele",
          "package": "switch-rele-domapic-module",
          "version": "1.0.0",
          "apiKey": "daf23rwf34grgjlpoj89h45bvdff238f0123bfl123n",
          "url": "https://192.168.1.120:3000"
        }
      },
      "UpdateModule": {
        "description": "Update module data",
        "type": "object",
        "properties": {
          "description": {
            "description": "Description of the module",
            "type": "string"
          },
          "package": {
            "description": "Package name of the module",
            "type": "string"
          },
          "version": {
            "description": "Package version of the module",
            "type": "string"
          },
          "apiKey": {
            "description": "Api key to connect with the module",
            "type": "string"
          },
          "url": {
            "description": "Url of the module",
            "type": "string",
            "format": "uri"
          }
        },
        "additionalProperties": false,
        "example": {
          "description": "Domapic module for switching a rele",
          "package": "switch-rele-domapic-module",
          "version": "1.0.0",
          "apiKey": "daf23rwf34grgjlpoj89h45bvdff238f0123bfl123n",
          "url": "https://192.168.1.120:3000"
        }
      },
      "Modules": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Module"
        }
      }
    },
    "responses": {
      "Module": {
        "description": "Module added or modified",
        "headers": {
          "location": {
            "$ref": "#/components/headers/ContentLocation"
          }
        }
      }
    }
  },
  "paths": {
    "/modules": {
      "get": {
        "tags": ["module"],
        "summary": "Get modules",
        "description": "List modules",
        "operationId": "getModules",
        "responses": {
          "200": {
            "description": "Get modules success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Modules"
                }
              }
            }
          }
        },
        "security": [{
          "jwt": []
        }, {
          "apiKey": []
        }]
      },
      "post": {
        "tags": ["module"],
        "summary": "Add a new module",
        "description": "Register a new module",
        "operationId": "addModule",
        "requestBody": {
          "description": "Data of the module to be added",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewModule"
              }
            }
          }
        },
        "responses": {
          "201": {
            "$ref": "#/components/responses/Module"
          }
        },
        "security": [{
          "jwt": []
        }, {
          "apiKey": []
        }]
      }
    },
    "/modules/{id}": {
      "get": {
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "Module id"
          }
        ],
        "tags": ["module"],
        "summary": "Returns module data",
        "description": "Returns all data about a module",
        "operationId": "getModule",
        "responses": {
          "200": {
            "description": "module success",
            "content": {
              "application/json": {
                "schema" : {
                  "$ref": "#/components/schemas/Module"
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/NotFoundError"
          }
        },
        "security": [{
          "jwt": []
        }, {
          "apiKey": []
        }]
      },
      "patch": {
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "Module id"
          }
        ],
        "tags": ["module"],
        "summary": "Update module data",
        "description": "Update module data",
        "operationId": "updateModule",
        "requestBody": {
          "description": "Data of the module to be modified",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateModule"
              }
            }
          }
        },
        "responses": {
          "204": {
            "$ref": "#/components/responses/Module"
          },
          "404": {
            "$ref": "#/components/responses/NotFoundError"
          }
        },
        "security": [{
          "jwt": []
        }, {
          "apiKey": []
        }]
      }
    }
  }
}
