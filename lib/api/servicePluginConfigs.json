            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateServicePluginConfig"
              }
            }
          }
        },
        "responses": {
          "204": {
            "$ref": "#/components/responses/ServicePluginConfig"
          },
          "404": {
            "$ref": "#/components/responses/NotFoundError"
          }
        },
        "security": [{
          "jwt": []
        }, {
          "apiKey": []
        }]
      }
    }
  }
}
